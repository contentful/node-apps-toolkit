{
  "name": "@contentful/node-apps-toolkit",
  "version": "0.1.4",
  "description": "A collection of helpers and utilities for creating NodeJS Contentful Apps",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "echo ' ðŸ”‘ Creating valid keypair for testing' && sh test/make-private-keys.sh &> /dev/null",
    "test:unit": "mocha -r dotenv/config -r ts-node/register ./src/**/*.spec.ts",
    "test:integration": "mocha -r dotenv/config -r ts-node/register --timeout 10000 ./test/**/*.test.ts",
    "test": "npm run test:unit && npm run test:integration",
    "build": "npm run build:lib && npm run build:docs",
    "build:lib": "rm -rf lib && tsc",
    "build:docs": "typedoc --options .typedocrc.json src",
    "start:docs": "serve ./docs",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release"
  },
  "author": "Contentful GmbH",
  "license": "MIT",
  "dependencies": {
    "debug": "^4.2.0",
    "@types/debug": "^4.1.5",
    "got": "^11.7.0",
    "jsonwebtoken": "^8.5.1",
    "node-cache": "^5.1.2",
    "runtypes": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.2",
    "@types/sinon": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "base64url": "^3.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "semantic-release": "^17.1.2",
    "serve": "^11.3.2",
    "sinon": "^9.1.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "sh ./scripts/ensure-includes-docs.sh",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run build:docs"
    ]
  }
}
