{
  "name": "contentful-node-apps-toolkit",
  "version": "0.0.1",
  "description": "Utilities for developing your Contentful application in NodeJS",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "npm run lint -- --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:lib && npm run build:docs",
    "build:lib": "rm -rf lib && tsc",
    "build:docs": "typedoc --options .typedocrc.json src",
    "start:docs": "serve ./docs"
  },
  "author": "Contentful",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "serve": "^11.3.2",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "sh ./scripts/ensure-includes-docs.sh"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run build:docs"
    ]
  }
}
