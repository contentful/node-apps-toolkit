{
  "name": "@contentful/node-apps-toolkit",
  "version": "2.0.3",
  "description": "A collection of helpers and utilities for creating NodeJS Contentful Apps",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "echo ' ðŸ”‘ Creating valid keypair for testing' && sh test/make-private-keys.sh &> /dev/null",
    "test:unit": "mocha -r dotenv/config -r ts-node/register ./src/**/*.spec.ts",
    "test:integration": "mocha -r dotenv/config -r ts-node/register --timeout 10000 ./test/**/*.test.ts",
    "test": "npm run test:unit && npm run test:integration",
    "build": "npm run build:lib && npm run build:docs",
    "build:lib": "rm -rf lib && tsc",
    "build:docs": "typedoc --options .typedocrc.json src",
    "start:docs": "serve ./docs",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release"
  },
  "author": "Contentful GmbH",
  "license": "MIT",
  "dependencies": {
    "@types/debug": "^4.1.5",
    "debug": "^4.2.0",
    "got": "^11.7.0",
    "jsonwebtoken": "^8.5.1",
    "node-cache": "^5.1.2",
    "runtypes": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "17.2.0",
    "@semantic-release/changelog": "6.0.0",
    "@semantic-release/git": "10.0.0",
    "@types/jsonwebtoken": "8.5.9",
    "@types/mocha": "10.0.0",
    "@types/node": "14.18.5",
    "@types/sinon": "9.0.11",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "base64url": "3.0.1",
    "dotenv": "16.0.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "mocha": "10.1.0",
    "prettier": "2.7.1",
    "semantic-release": "19.0.5",
    "serve": "13.0.2",
    "sinon": "9.2.4",
    "ts-node": "10.9.1",
    "typedoc": "0.22.18",
    "typescript": "4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "sh ./scripts/ensure-includes-docs.sh",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run build:docs"
    ]
  }
}
